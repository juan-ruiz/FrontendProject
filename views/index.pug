    #bottom-banner-medium.section.no-pad-bot.valign-wrapper.show-on-medium.hide-on-small-only.hide-on-large-only(style="clip-path: url('#clip-bottom');")
      #bottom-banner-medium-content.center-block
        h1.text_h.center.header.banner-title-medium.letters.type
